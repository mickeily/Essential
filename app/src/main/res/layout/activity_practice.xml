<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="395dp"
        android:layout_height="276dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.96">

        <Button
            android:id="@+id/sByLesson"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:onClick="StudyingByLesson"
            android:text="Studying by Lesson" />

        <Button
            android:id="@+id/lByLesson"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:onClick="ListeningByLesson"
            android:text="Listening By Lesson" />

        <Button
            android:id="@+id/pByLesson"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:onClick="practicingByLesson"
            android:text="Practicing By Lesson"


            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="392dp"
        android:layout_height="230dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/box"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <TableLayout
            android:layout_width="75dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="bottom|center"
                    android:text="Start Book" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/sBook"
                    android:layout_width="80dp"
                    android:layout_height="61dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="bottom|center"
                    android:text="End Book" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/eBook"
                    android:layout_width="80dp"
                    android:layout_height="61dp" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/hola5"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:text="Start Unit" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/sUnit"
                    android:layout_width="80dp"
                    android:layout_height="61dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:text="End Unit" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/eUnit"
                    android:layout_width="80dp"
                    android:layout_height="61dp" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="bottom|center"
                    android:text="Start Lesson" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/sLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/EndUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="bottom|center"
                    android:text="End Lesson" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/eLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>